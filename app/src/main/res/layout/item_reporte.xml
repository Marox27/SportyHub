<?xml version="1.0" encoding="utf-8"?>

<!-- item_reporte.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/layout_border"
    android:elevation="2dp">

    <ImageView
        android:id="@+id/imageViewAvatarUsuarioReportante"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_profile"
        android:layout_marginEnd="8dp"
        android:background="@drawable/circle_background"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewUsernameReportante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nickname del Reportante"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewDescripcionReporte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción del reporte"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"/>

        <!-- Este TextView muestra el tipo de reporte dinámicamente -->
        <TextView
            android:id="@+id/textViewTipoReporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de Reporte"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">

        <!-- Este TextView muestra el estado del reporte -->
        <TextView
            android:id="@+id/textViewEstadoReporte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@drawable/status_background"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:textColor="@android:color/white"/>

        <!-- Fecha de creación del reporte -->
        <TextView
            android:id="@+id/textViewFechaCreacionReporte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DD/MM/YYYY"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"/>
    </LinearLayout>

</LinearLayout>
