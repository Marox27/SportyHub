<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SportyHub" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF9800</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/mainOrange</item>
        <item name="android:textColor">@color/black</item>

        <item name="android:colorBackground">#FDE1B8</item>
        <item name="android:windowBackground">@color/white</item>

        <!-- Aplicar el estilo del título al Toolbar -->
        <item name="toolbarStyle">@style/ToolbarStyle</item>

        <!-- Aplicar estilo a los spinners-->
        <item name="android:spinnerItemStyle">@style/SpinnerTextStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownTextStyle</item>

    </style>

    <!-- Estilo para el Toolbar -->
    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarTitleStyle</item>
    </style>

    <!-- Estilo para el título del Toolbar -->
    <style name="ToolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="SpinnerTextStyle" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="SpinnerDropDownTextStyle" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
